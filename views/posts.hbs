<div class="row">
  <div class="col-md-12">
    <hr />
    <h2>Posts</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <head>
          <tr>
            <th>Posts&nbsp;ID</th>
            <th>Title</th>
            <th>Post&nbsp;Date</th>
            <th>Category</th>
            <th>Published</th>
        </head>
        <body>
        {{#each posts}}
        <tr>
        <td><a href="/posts?id={{id}}">{{id}}</a></td>
        <td><a href="/posts?title={{title}}">{{title}}</a></td>
        <td><a href="/posts?postDate={{postDate}}">{{postDate}}</a></td>
        <td><a href="/posts?category={{category}}">{{category}}</a></td>
        <td><a href="/posts?published={{published}}">{{published}}</a></td>
        </tr>
        {{/each}}
        </body>
      </table>
    </div>
  </div>
  {{#unless categories}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>
