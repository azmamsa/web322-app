<div class="row">
  <div class="col-md-12">
    <hr />
    <h2>Categories</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <head>
          <tr>
            <th>Category&nbsp;ID</th>
            <th>Category&nbsp;Name</th>
        </head>
        <body>
        {{#each categories}}
        <tr>
        <td><a href="/posts?category={{id}}">{{id}}</a></td>
        <td><a href="/categories?category={{category}}">{{category}}</a></td>
        </tr>
        {{/each}}
        </body>
      </table>
    </div>
  </div>
  {{#unless categories}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>
